<% typeof allProducts != 'undefined' ? allProducts : [] %> 
<% if (allProducts.length>0) { %>
    <table class='table table-dark table-striped'>
        <thead>
            <tr>
            <th scope='col' class='ps-4'>id</th>
            <th scope='col' class='ps-4'>Name</th>
            <th scope='col' class='text-center'>Price</th>
            <th scope='col' class='text-center'>Image</th>
            </tr>
        </thead>
        <tbody>
        <% allProducts.forEach(Products => { %>
            <tr>
                <th scope='row' class='ps-4 align-middle'><%= Products.id %></th>
                <th scope='row' class='ps-4 align-middle'><%= Products.title %></th>
                <td class='text-center align-middle'><%= Products.price %></td>
                <td >
                    <div class='image-container text-center'>
                        <img src=<%= Products.thumbnail %> alt='Product image' class='img-thumbnail' />
                    </div>
                </td>                        
            </tr>
        <% }) %>            
<% } else { %>
    <div class='message'>
        <h2>There are no products</h2>
    </div>
<% } %>



